<ul class="list-none pl-0">
	{% for post in postslist | reverse %}
		<li class="relative flex flex-col rounded-lg px-8 -mx-8 hover:bg-gray-100 {% if post.url == url %} active{% endif %}">
			<time class="text-sm" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
			<a href="{{ post.url }}" class="text-base text-brand-red-600 stretched-link">
				{{ post.data.title }}
			</a>
			<p class="mt-0">{{ post.data.description }}</p>

		</li>
	{% endfor %}
</ol>